@page "/login"
@layout LoginLayout
@rendermode InteractiveServer


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <base href="/" />
</head>
<body style="background: white; margin: 0; padding: 0; min-height: 100vh;">
    <div class="login-page-container">
        <div class="login-panel">
            <h3 class="text-center mb-4">Login</h3>
            
            <div class="form-group mb-3">
                <label for="username">Email addresseses</label>
                <input type="email" class="form-control" id="username" placeholder="Enter email">
            </div>
            
            <div class="form-group mb-4">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password">
            </div>
            
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Sign In</button>
            </div>
            
            <div class="text-center mt-3">
                <a href="#">Forgot Passworxsd?</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<style>
    /* Remove any default margins/paddings */
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        background: white !important;
    }

    /* --- Page Setup --- */
    .login-page-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        width: 100%;
        background: white;
        margin: 0;
        padding: 0;
    }

    /* --- Glassmorphism Panel --- */
    .login-panel {
        width: 100%;
        max-width: 400px;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1); 
        background: rgba(255, 255, 255, 0.7);
        -webkit-backdrop-filter: blur(10px);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(200, 200, 200, 0.5);
        color: #333;
    }

    .login-panel h3 {
        color: #333;
        font-weight: 600;
    }

    .login-panel .form-control {
        background: rgba(255, 255, 255, 0.6);
        border: 1px solid rgba(150, 150, 150, 0.5);
        color: #333;
    }

    .login-panel .form-control::placeholder {
        color: #999;
    }

    .login-panel .form-control:focus {
        background: rgba(255, 255, 255, 0.8);
        box-shadow: 0 0 0 0.25rem rgba(100, 100, 100, 0.1); 
        border-color: #555;
    }

    .login-panel label {
        font-weight: 500;
        color: #333;
    }

    .login-panel .btn-primary {
        background: #4e73df; 
        border: none;
        font-weight: bold;
    }

    .login-panel a {
        color: #4e73df;
    }
</style>