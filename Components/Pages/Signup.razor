@page "/signup"
@layout LoginLayout

@using LC360.Models                     @* DTO that holds the signup fields *@
@using LC360.Services                  @* IAuthService interface *@
@using Microsoft.AspNetCore.Components.Forms   @* Input* components *@

@inject IAuthService AuthService
@inject NavigationManager NavManager

<div class="bg-white p-4 rounded shadow-sm">
    <h3 class="text-center mb-4">Create an account</h3>

    <EditForm Model="_model" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary class="text-danger mb-3" />

        <!-- First name -------------------------------------------------------->
        <div class="mb-3">
            <label for="firstName" class="form-label">First name</label>
            <InputText id="firstName"
                       class="form-control"
                       @bind-Value="_model.FirstName" 
                       @oninput="UpdateButtonState" />
            <ValidationMessage For="@(() => _model.FirstName)" />
        </div>

        <!-- Last name -------------------------------------------------------->
        <div class="mb-3">
            <label for="lastName" class="form-label">Last name</label>
            <InputText id="lastName"
                       class="form-control"
                       @bind-Value="_model.LastName" 
                       @oninput="UpdateButtonState" />
            <ValidationMessage For="@(() => _model.LastName)" />
        </div>

        <!-- Email -------------------------------------------------------------->
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <InputText id="email"
                       type="email"
                       class="form-control"
                       @bind-Value="_model.Email" 
                       @oninput="UpdateButtonState" />
            <ValidationMessage For="@(() => _model.Email)" />
        </div>

        <!-- Password ----------------------------------------------------------->
        <div class="mb-3">
            <label for="password" class="form-label">Passwords</label>
            <InputText id="password"
                       type="password"
                       class="form-control"
                       @bind-Value="_model.Password" 
                       @oninput="UpdateButtonState" />
            <ValidationMessage For="@(() => _model.Password)" />
        </div>

        <!-- Confirm password --------------------------------------------------->
        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm password</label>
            <InputText id="confirmPassword"
                       type="password"
                       class="form-control"
                       @bind-Value="_model.ConfirmPassword" 
                       @oninput="UpdateButtonState" />
            <ValidationMessage For="@(() => _model.ConfirmPassword)" />
        </div>

        @* Global error that comes back from the service (duplicate e‑mail, etc.) *@
        @if (!_isBusy && !string.IsNullOrWhiteSpace(_errorMessage))
        {
            <div class="alert alert-danger">@_errorMessage</div>
        }

        <!-- Submit button ------------------------------------------------------ -->
        <button type="submit"
                class="btn btn-primary w-100"
                disabled="@(!_allFieldsFilled || _isBusy)">
            @if (_isBusy)
            {
                <span class="spinner-border spinner-border-sm me-2"
                      role="status"
                      aria-hidden="true"></span>
                @:Signing up...
            }
            else
            {
                @:Sign up
            }
        </button>

        <div class="mt-3 text-center">
            Already have an account? <a href="/login">Log in</a>
        </div>
    </EditForm>
</div>

@code {
    // The form is bound to this DTO (LC360.Models.SignupRequest)
    private SignupRequest _model = new();

    private bool _isBusy;
    private string? _errorMessage;
    private bool _allFieldsFilled = false;

    protected override void OnInitialized()
    {
        UpdateButtonState();
    }

    private void UpdateButtonState()
    {
        // Check if all required fields are filled
        _allFieldsFilled = !string.IsNullOrWhiteSpace(_model.FirstName) &&
                           !string.IsNullOrWhiteSpace(_model.LastName) &&
                           !string.IsNullOrWhiteSpace(_model.Email) &&
                           !string.IsNullOrWhiteSpace(_model.Password) &&
                           !string.IsNullOrWhiteSpace(_model.ConfirmPassword);
        
        StateHasChanged();
    }

    private async Task HandleValidSubmit()
    {
        _errorMessage = null;
        _isBusy = true;

        try
        {
            await AuthService.RegisterAsync(_model);
            // Registration succeeded → go to the login page.
            NavManager.NavigateTo("/login?registered=1");
        }
        catch (Exception ex)
        {
            // The service throws on any failure; surface the message.
            _errorMessage = ex.Message;
        }
        finally
        {
            _isBusy = false;
        }
    }
}